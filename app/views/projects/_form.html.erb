<%= form_with(model: [project], local: true, html: { class: 'form-horizontal' }) do |f| %>
  <% if project.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
    <ul>
      <% project.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name, 'Name', class: 'col-lg-2 control-label' %>
      <div class="col-lg-4">
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Título del post' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :category_id, 'Name', class: 'col-lg-2 control-label' %>
      <div class="col-lg-4">
        <%= f.select :category_id, Category.pluck(:name, :id), class: 'form-control', placeholder: 'Título del post' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :url, 'Url', class: 'col-lg-2 control-label' %>
      <div class="col-lg-4">
        <%= f.text_field :url, class: 'form-control', placeholder: 'Contenido del post' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :project_photo, 'Project photo', class: 'col-lg-2 control-label' %>
      <div class="col-lg-4">
        <%= f.text_field :project_photo, class: 'form-control', placeholder: 'Contenido del post' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :lead, 'Lead', class: 'col-lg-2 control-label' %>
      <div class="col-lg-4">
        <%= f.text_field :lead, class: 'form-control', placeholder: 'Contenido del post' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, 'Description', class: 'col-lg-2 control-label' %>
      <div class="col-lg-4">
        <%= f.text_field :description, class: 'form-control', placeholder: 'Contenido del post' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :repository, 'Repository', class: 'col-lg-2 control-label' %>
      <div class="col-lg-4">
        <%= f.text_field :repository, class: 'form-control', placeholder: 'Contenido del post' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit 'Confirmar', class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end %>
