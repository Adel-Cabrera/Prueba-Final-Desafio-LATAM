
<% if @comments != nil %>
  <% @comments.each do |comment| %>
    <div class="card card-body bg-light my-2 mx-5 px-5">
      <span>
        <strong><%= comment.user.name %>:</strong>
        <% if can? :destroy, comment %>
          <%= link_to 'Delete', project_comment_path(@project, comment), method: :delete, data: { remote: true }, class: 'btn btn-sm btn-danger float-right deletecom' %>
        <% end %>
      </span>
      <br>
      <p><%= comment.content %> <br>
      <small><%= time_ago_in_words(comment.created_at) %></small></p>
    </div>
  <% end %>
<% end %>
