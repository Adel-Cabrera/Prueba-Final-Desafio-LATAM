<div class="container profile justify-content-center text-center">
  <div class="row">
    <div class="col">
      <div class="profile-card ">
        <div class="profile-info">
          <div class="image-cropper">
            <img class="profile-pic" src="<%= @user.avatar.present? ? @user.avatar : @user.profile_photo %>">
          </div>
          <h2 class="hvr-underline-from-center"><%= @user.name %>
            <span><%= @user.course %></span> <span class="text-white mt-1"> <%= @user.city %> </span></h2>
            <h3><%= @user.bio %></h3>
              <%= link_to "Edit profile", edit_user_registration_path, class: "button-profile button5" %>
        </div>
      </div>
    </div>
  </div>
</div>



<section>
  <div class="container text-center">
    <h1 class="my-5">My projects</h1>
    <div class="row">
      <% @projects.reverse.each do |project| %>
        <div class="col-md-4 col-lg-4">
          <div class="card shadow border-1">
            <% if user_signed_in? %>
              <%= link_to (image_tag project.project_photo.url, size: "400x300", class: "card-img-top"), all_project_path(project), :remote => true%>
            <% else %>
              <%= link_to (image_tag project.project_photo.url, size: "400x300" ), all_project_path(project), :remote => true%>
            <% end %>
          </div>
          <div class="w-100" style="margin-top:20px;"></div>

        </div>
      <% end %>
    </div>
  </div>
</section>
