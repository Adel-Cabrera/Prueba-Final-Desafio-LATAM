<div class="container">
  <h1>My projects</h1>

  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Link</th>
        <th>Name</th>
        <th>Lead</th>
        <th>Description</th>
        <th>Repository</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.reverse.each do |project| %>

        <tr>
          <td><%= link_to "#{project.name}", project %></td>
          <td><%= project.url %></td>
          <td><%= project.lead %></td>
          <td><%= project.description %></td>
          <td><%= project.repository %></td>
          <td><%= project.user.name %></td>

          <td><%= link_to 'Editar', edit_project_path(project), class: 'btn btn-sm btn-success' %></td>

          <td>
            <%= link_to 'Eliminar', project, method: :delete, data: { confirm: 'EstÃ¡s seguro que deseas eliminar el Post?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>

</div>
