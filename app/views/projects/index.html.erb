<div class="container">

  <h1>Projects</h1>

  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Link</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Lead</th>
        <th>Description</th>
        <th>Repository</th>
        <th>Author</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.reverse.each do |project| %>

        <tr>
          <td><%= link_to "#{project.name}", project_path(project) %></td>
          <td><%= project.url %></td>
          <td><%= image_tag project.project_photo.url, size: "32x32" %></td>
          <td><%= project.lead %></td>
          <td><%= project.description %></td>
          <td><%= project.repository %></td>
          <td><%= project.user.name %></td>
          <td>
            <% project.categories.each do |category| %>
              <%= category.name %>
            <% end %>
          </td>
          <td>
            <%= link_to 'Editar', edit_project_path(project), class: 'btn btn-sm btn-success' %>
          </td>
          <td>
            <%= link_to "Show prueba", prueba_project_path(project), remote: true, class: "btn btn-primary" %>
          </td>
          <td>
            <%= link_to 'Show', project_path(project), class: 'btn btn-sm btn-success' %>
          </td>

          <td>
            <%= link_to 'Eliminar', project, method: :delete, data: { confirm: 'EstÃ¡s seguro que deseas eliminar el Post?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
