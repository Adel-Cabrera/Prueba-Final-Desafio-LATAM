<% @project.categories.each do |category| %>
  <small class="badge badge-info"><%= category.name %>
    <% if can? :update, @project %>
        <%= link_to 'X', remove_tag_project_path(@project, category), method: :delete, data: { remote: true }, class: "text-white delete" %>
    <% end %>

  </small>
<% end %>
